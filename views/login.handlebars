{{!-- Handlebars page to handle user login and accountcreation --}}
<div class="container text-center">
  <div class="row justify-content-between align-items-center">
    <div class="col-lg-6">
      {{!-- Site welcome message --}}
      <div class="jumbotron bg-white text-left">
        <p class="lead custom-lead display-5 text-center"><span class="custom-title display-4">budget</span><br></h1> The simple, no-fuss, low-stress budgeting tool to help you securely track your finances while on the go.</p>
      </div>
    </div>
    {{!-- Login form --}}
    <div class="col-lg-6 d-flex flex-column justify-content-left text-center align-items-center">
      <div class="border border-3 rounded m-3 p-2 w-75">
        <p><b>Sign in to your account</b>
        <form class="form login-form p-3">
          <div class="form-group">
            <input
              class="form-input w-100 text-center"
              type="text"
              id="email-login"
              placeholder="enter email address"
            />
          </div>
          <div class="form-group">
            <input
              class="form-input w-100 text-center"
              type="password"
              id="password-login"
              placeholder="enter your password"
            />
          </div>
          {{!-- Input warning message when missing or incorrect information is entered --}}
          <p id = "signinWarning" class="text-danger" style = "display: none">Something isn't quite right. <br> Make sure you've entered the correct email and password.</p>
          {{!-- Account creation form --}}
          <div class="form-group">
            <button
              class="btn btn-success mt-3 custom-text-color"
              type="submit"
            >LOGIN TO ACCOUNT</button>
          </div>
        </form>
      </div>
      <div class="border border-3 rounded m-2 p-2 w-75">
        <p><b>Don't have an account yet?</b></p>
        <p class="mt-3"><i>Fill out the details below to create your account.</i></p>
        <form class="form signup-form">
          <div class="form-group">
            <input
              class="form-input w-100 text-center"
              type="text"
              id="name-signup"
              placeholder="enter your first name"
            />
          </div>
          <div class="form-group">
            <input
              class="form-input w-100 text-center"
              type="text"
              id="email-signup"
              placeholder="enter your email address"
            />
          </div>
          <div class="form-group">
            <input
              class="form-input w-100 text-center"
              type="password"
              id="password-signup"
              placeholder="create a password"
            />
          </div>
          {{!-- Input warning message when missing or incorrect information is entered --}}
          <p id="newAccountWarning" class="text-danger" style = "display: none">Something isn't quite right. <br> Make sure you've filled in all requested details.</p>
          <div class="form-group">
            <button
              class="btn btn-success mt-3 custom-text-color"
              type="submit"
            >CREATE NEW ACCOUNT</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{!-- Link to login.js to manage button click events --}}
<script src="./js/login.js"></script>