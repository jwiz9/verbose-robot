<div class="container text-center">
  <div class="row justify-content-between align-items-center">
    <div class="col-lg-6">
      <div class="jumbotron bg-white text-left h-75">
        {{!-- If logged in user will see welcome message with prompt to create a new budget --}}
        <h1 class="display-5 text-lowercase mb-5">Welcome!</h1>
        <p class="lead">This is where you will see all the budgets you have created.</p>
        <p class="lead">Click on a budget to view it's details.</p>
        <p class="lead">Click on the create budget button to create a new budget.</p>
        <br>
    <button
      onclick="window.location.href='/api/build';"
      id="budgetBtn"
      class="btn btn-success"
    >create new budget</button>
  </div>
</div>

{{#if budgets.length}}
<div class="jumbotron bg-white text-right col-lg-6">
  <div class="container budget-list">
    {{#each budgets as |budget|}}
      <div class="card custom-blockColor w-100" >
        <div class="card-body">
                <h4><a href="dash/budget/{{budget.id}}">{{budget.name}}</a></h4>
              <h5>Budget Limit:$ {{budget_limit}}</b5>
        </div>
        <a
          href="#"
          class="btn btn-close btn-light m-2"
          data-id="{{budget.id}}"
        >âœ–</a>
      </div>
    {{/each}}
  </div>
</div>
{{/if}}
<script src="./js/dashboard.js"></script>