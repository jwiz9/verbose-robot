<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="shortcut icon" type="image/x-icon" href="/images/budgie.png" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    {{! Import Boostrap Styles }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    {{! Import Google Font }}
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Chango&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title class="custom-title">budget</title>
  </head>
  <body>
    <header>
      <div class="row">
        <div class="col">
          <img
            src="/images/budgie.png"
            class="rounded float-left"
            id="logo"
            alt="Budgie the bird"
          />
          <h4 class="custom-title">budget</h4>
        </div>
        <div class="col d-flex justify-content-end align-items-center">
          <nav class="custom-navbar navbar navbar-expand-lg">
            <button
              class="navbar-toggler"
              type="button"
              data-toggle="collapse"
              data-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">

                {{#if logged_in}}
                  <li class="nav-item active">
                    <a class="nav-link" href="/">home
                      <span class="sr-only">(current)</span></a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/dash">dashboard</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link"><button
                        class="btn btn-success custom-button-font"
                        id="logout"
                      >logout</button></a>
                  </li>
                {{else}}
                  <li class="nav-item">
                    <a class="nav-link" href="/login">login</a>
                  </li>
                {{/if}}
              </ul>
            </div>
          </nav>
        </div>
      </div>
    </header>
    <main>
      {{{body}}}
    </main>
    <footer>

    </footer>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>